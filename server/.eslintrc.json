{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "browser": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-restricted-syntax": ["error", "LabeledStatement", "WithStatement"],
        "allowForLoopAfterthoughts": 0 
    }
}
